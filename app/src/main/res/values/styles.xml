<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="ThemeProfile" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryFullScreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryFullScreen</item>
        <item name="colorAccent">@color/colorAccentFullScreen</item>
    </style>

    <style name="BottomSheetAppBarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:theme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="BottomSheetToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="BottomSheetTabLayoutStyle" parent="MainTabLayoutStyle">
        <item name="tabIndicatorColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="MainTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MainTabTextAppearance</item>
    </style>

    <style name="MainTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowBackground">@drawable/bg_splash_activity</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="StyleTextViewUserInfor">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_item_user_infor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleLinnerLayoutItemUserInfor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_item_detail_contacts</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="StyleImageIconItemUserInfor">
        <item name="android:layout_width">@dimen/size_imv_item_detail_contacts</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="StyleLinnerTitleItemUserInfor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="StyleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>
