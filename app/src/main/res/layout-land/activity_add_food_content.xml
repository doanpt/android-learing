<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryAdmin"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/activity_add_food_content_padding_default"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="com.google.foods.activity.AddFoodActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/add_new_food"
                android:textColor="@color/color_while"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/border_frame_add_food"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_add_food_content_margin_default"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/activity_order_content_label_with_default"
                                android:layout_height="wrap_content"
                                android:text="@string/activity_add_food_content_label_price"
                                android:textColor="@color/colorPrimaryAdmin"
                                android:textSize="@dimen/activity_add_food_content_textsize_default"/>

                            <Spinner
                                android:id="@+id/spn_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingBottom="@dimen/activity_order_content_edt_padding_top_bottom"
                                android:paddingLeft="@dimen/activity_order_content_edt_padding_left_right"
                                android:paddingRight="@dimen/activity_order_content_edt_padding_left_right"
                                android:paddingTop="@dimen/activity_order_content_edt_padding_top_bottom">

                            </Spinner>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_add_food_content_margin_default"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/activity_order_content_label_with_default"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:paddingTop="@dimen/activity_order_content_edt_padding_top_bottom"
                                android:text="@string/activity_add_food_content_label_name"
                                android:textColor="@color/colorPrimaryAdmin"
                                android:textSize="@dimen/activity_add_food_content_textsize_default"/>

                            <EditText
                                android:id="@+id/add_food_edt_food_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_order_content_margin_left"
                                android:paddingLeft="@dimen/activity_order_content_edt_padding_left_right"
                                android:paddingRight="@dimen/activity_order_content_edt_padding_left_right"
                                android:paddingTop="@dimen/activity_order_content_edt_padding_top_bottom"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_add_food_content_margin_default"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/activity_order_content_label_with_default"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/activity_order_content_edt_padding_top_bottom"
                                android:text="@string/activity_add_food_content_label_quantity"
                                android:textColor="@color/colorPrimaryAdmin"
                                android:textSize="@dimen/activity_add_food_content_textsize_default"/>

                            <EditText
                                android:id="@+id/add_food_edt_total_quantity"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_order_content_margin_left"
                                android:inputType="number"
                                android:maxLength="5"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/activity_order_content_edt_padding_left_right"
                                android:paddingRight="@dimen/activity_order_content_edt_padding_left_right"
                                android:paddingTop="@dimen/activity_order_content_edt_padding_top_bottom"/>
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_add_food_content_img_height"
                        android:layout_weight="1"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="15dp"
                                android:src="@drawable/bg_choose_image_"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/click_here_to_choose_image"
                                android:textColor="@color/colorImageViewPlugFood"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_choose_image_from_library"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/activity_add_food_content_img_height"
                            android:scaleType="centerCrop"/>
                    </FrameLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_add_new_food"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/state_bg_btn_order"
                    android:text="@string/activity_add_food_content_button_add_food"
                    android:textColor="@android:color/white"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>