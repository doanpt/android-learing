<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_actionbar"
    android:background="@color/color_actionbar"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="@dimen/width_height_0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/title_tv_app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_tv_app_name" />

    <ImageView
        android:id="@+id/iv_search_local"
        android:layout_width="@dimen/size_iv_search_local"
        android:layout_height="@dimen/size_actionbar"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/padding"
        android:src="@drawable/ic_search_white" />
</LinearLayout>