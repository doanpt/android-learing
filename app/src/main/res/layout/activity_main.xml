<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_ll_search">

        <EditText
            android:id="@+id/tv_content_search"
            android:layout_width="@dimen/width_height_0dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btnSearch"
            android:layout_weight="3"
            android:hint="@string/text_hint_edt_search"></EditText>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="@dimen/width_height_0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:text="@string/title_btn_search"></Button>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_search"
        android:layout_marginTop="@dimen/margin_lv"></ListView>

</RelativeLayout>
