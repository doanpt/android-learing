<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/border_dialog_custome"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="-20dp"
        android:gravity="center"
        android:text="@string/text_choose_type_work"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rd_option_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <RadioButton
                    android:id="@+id/rd_option_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <RadioButton
                    android:id="@+id/rd_option_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <RadioButton
                    android:id="@+id/rd_option_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/tv_option_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/type_work_new"
                android:textSize="14sp"/>

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/tv_option_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/type_work_doing"
                android:textSize="14sp"/>

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/tv_option_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/type_work_complete"
                android:textSize="14sp"/>

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/tv_option_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/type_all_work"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="-20dp"
        android:text="OK"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>
</LinearLayout>