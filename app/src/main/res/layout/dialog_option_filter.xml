<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/border_dialog_custome"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="-20dp"
        android:gravity="center"
        android:text="@string/text_choose_type_work"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp">

            <RadioButton
                android:id="@+id/rd_option_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/type_work_new"/>

            <RadioButton
                android:id="@+id/rd_option_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/type_work_doing"/>

            <RadioButton
                android:id="@+id/rd_option_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/type_work_complete"/>

            <RadioButton
                android:id="@+id/rd_option_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/type_all_work"/>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="-20dp"
        android:text="OK"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>
</LinearLayout>