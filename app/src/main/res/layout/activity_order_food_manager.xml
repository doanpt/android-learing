<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.OrderFoodManagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimaryAdmin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_menu"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_menu"/>

        <TextView
            android:id="@+id/title_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="@string/quan_ly_order"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imv_add_food"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:padding="13dp"
            android:src="@drawable/ic_add_food"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransferent"></FrameLayout>


</LinearLayout>
