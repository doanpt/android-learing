<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/ic_bg_profile"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_avatar_profile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:cropToPadding="true"
                app:civ_border_color="@color/color_boder_avatar"
                app:civ_border_width="4dp"
                />

            <TextView
                android:id="@+id/tv_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="HoangIT"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:elevation="9dp"
            app:tabIndicatorHeight="1dp"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TextView"
            app:tabTextColor="@android:color/darker_gray"
            tools:targetApi="lollipop">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Thông tin tài khoản"/>

            <android.support.design.widget.TabItem

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Thay đổi mật khẩu"/>


        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_back_profile"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_back_while"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imv_edit_profile"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:padding="18dp"
            app:srcCompat="@drawable/ic_more_edit"/>

        <ImageView
            android:id="@+id/imv_more_profile"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_more"/>
    </LinearLayout>
</FrameLayout>
