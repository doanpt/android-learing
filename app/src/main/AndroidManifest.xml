        </activity>

        <activity
            android:name=".MainActivity"
            android:label="Music of Life"
            android:theme="@style/TranslucentActionBarMain">

        </activity>
        <activity
            android:name=".PlaySongActivity"
            android:theme="@style/TranslucentActionBar">
